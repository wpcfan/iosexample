<UIView>
    <UIView
        backgroundColor="lightGray"
        isHidden="!hasNoHouse">

        <UIImageView
            center.x="parent.center.x"
            center.y="parent.center.y - 80"
            height="80"
            width="80"
            image="iconHome"
        />
        <UILabel
            center.x="previous.center.x"
            height="20"
            top="previous.bottom + 5"
            text="{strings.home.nohouse.tips_1}"
        />
        <UILabel
            center.x="previous.center.x"
            height="20"
            top="previous.bottom + 5"
            text="{strings.home.nohouse.tips_2}"
        />
        <UIButton
            backgroundColor="primary"
            center.x="previous.center.x"
            top="previous.bottom + 10"
            height="30"
            width="100"
            layer.cornerRadius="0.5 * height"
            title="{strings.home.nohouse.bindbtn.title}"
            touchUpInside="scanInModalAction"
        />
    </UIView>
    <UITableView
        isHidden="hasNoHouse"
        backgroundColor="white"
        contentInset.bottom="safeAreaInsets.bottom"
        contentInset.top="safeAreaInsets.top"
        contentInsetAdjustmentBehavior="never"
        contentOffset.y="-safeAreaInsets.top"
        estimatedSectionHeaderHeight="20"
        outlet="tableView"
        scrollIndicatorInsets.bottom="safeAreaInsets.bottom"
        scrollIndicatorInsets.top="safeAreaInsets.top"
        style="plain">

        <BannerView
            outlet="bannerView"
            top="parent.top"
            width="100%"
            height="200"
        />
    </UITableView>
</UIView>
