<HomeViewController outlet="layoutNode">
    <UIView
        height="100%"
        width="100%">

        <UIImageView
            bottom="parent.bottom"
            contentMode="scaleAspectFill"
            left="parent.left"
            outlet="imageView"
            right="parent.right"
            top="parent.top"
        />
        
    </UIView>
    <UITableView
        backgroundColor="clear"
        contentInset.bottom="safeAreaInsets.bottom"
        contentInset.top="parent.top"
        contentInsetAdjustmentBehavior="never"
        contentOffset.y="0"
        estimatedSectionHeaderHeight="0"
        outlet="tableView"
        scrollIndicatorInsets.bottom="safeAreaInsets.bottom"
        scrollIndicatorInsets.top="parent.top"
        style="plain"
        top="parent.top">

        <UIView
            height="headerHeight"
            width="100%">

            <BannerView
                height="80%"
                outlet="bannerView"
                top="parent.top"
                width="100%"
            />
            <UIView
                backgroundColor="white"
                bottom="parent.bottom"
                height="20%"
                width="100%">

                <UIStackView
                    alignment="center"
                    axis="horizontal"
                    center.x="parent.center.x"
                    distribution="fillEqually"
                    height="100%"
                    spacing="10"
                    width="toolbarWidth * parent.width">

                    <TabButton
                        left="parent.left + 10"
                        top="parent.top"
                        width="(parent.width - 30) / 2"
                        height="100%"
                        title="hello"
                        color="red"/>

                    <TabButton
                        left="previous.right + 10"
                        top="previous.top"
                        width="previous.width"
                        height="100%"
                        title="world"
                        color="blue" />

                </UIStackView>
            </UIView>
        </UIView>
    </UITableView>
</HomeViewController>
