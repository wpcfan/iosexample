<HomeViewController outlet="layoutNode">
    <UIView
        height="100%"
        width="100%">

        <UIImageView
            bottom="parent.bottom"
            contentMode="scaleAspectFill"
            left="parent.left"
            outlet="imageView"
            right="parent.right"
            top="parent.top"
        />
    </UIView>
    <UITableView
        backgroundColor="clear"
        contentInset.bottom="safeAreaInsets.bottom"
        contentInset.top="parent.top"
        contentInsetAdjustmentBehavior="never"
        contentOffset.y="0"
        estimatedSectionHeaderHeight="0"
        outlet="tableView"
        scrollIndicatorInsets.bottom="safeAreaInsets.bottom"
        scrollIndicatorInsets.top="parent.top"
        style="plain"
        top="parent.top">

        <UIView
            height="headerHeight"
            width="100%">

            <BannerView
                height="80%"
                outlet="bannerView"
                top="parent.top"
                width="100%"
            />
            <UIView
                backgroundColor="white"
                bottom="parent.bottom"
                height="20%"
                width="100%">

                <UIStackView
                    alignment="center"
                    axis="horizontal"
                    center.x="parent.center.x"
                    distribution="fillEqually"
                    height="100%"
                    spacing="10"
                    width="toolbarWidth * parent.width">

                    <UIView
                        left="parent.left + 10"
                        top="parent.top"
                        width="(parent.width - 30) / 2">

                        <UIButton
                            center.x="parent.center.x"
                            height="16"
                            title="hello"
                            titleColor="#000"
                            top="parent.top + 10"
                            width="64"
                        />
                        <UIView
                            backgroundColor="blue"
                            center.x="previous.center.x"
                            height="2"
                            top="previous.bottom + 10"
                            width="previous.width + 10"
                        />
                    </UIView>
                    <UIView
                        left="previous.right + 10"
                        top="previous.top"
                        width="previous.width">

                        <UIButton
                            center.x="parent.center.x"
                            height="16"
                            title="world"
                            titleColor="#000"
                            top="parent.top + 10"
                            width="64"
                        />
                        <UIView
                            backgroundColor="blue"
                            center.x="previous.center.x"
                            height="2"
                            top="previous.bottom + 10"
                            width="previous.width + 10"
                        />
                    </UIView>
                </UIStackView>
            </UIView>
        </UIView>
    </UITableView>
</HomeViewController>
