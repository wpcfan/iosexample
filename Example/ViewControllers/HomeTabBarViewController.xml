<UIView
    height="toolbarHeight"
    id="toolbar"
    width="100%">

    <UIView
        center.x="parent.center.x"
        height="parent.height"
        width="toolbarWidth * parent.width">

        <Example.TabButton
            color="red"
            height="100%"
            left="parent.left + 10"
            title="hello"
            top="parent.top"
            width="(parent.width - 30) / 2"
        />
        <Example.TabButton
            color="blue"
            height="100%"
            left="previous.right + 10"
            title="world"
            top="previous.top"
            width="previous.width"
        />
    </UIView>
</UIView>
