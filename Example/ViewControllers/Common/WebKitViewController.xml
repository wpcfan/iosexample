<UIView>
    <WKWebView
        outlet="webView"
        scrollView.contentInset.bottom="safeAreaInsets.bottom"
        scrollView.contentInsetAdjustmentBehavior="never"
        scrollView.scrollIndicatorInsets="scrollView.contentInset"
    />
    <NVActivityIndicatorView.NVActivityIndicatorView
        center.x="parent.center.x"
        center.y="parent.center.y"
        color="darkGray"
        height="50"
        outlet="activityIndicatorView"
        width="100"
    />
    <UILabel
        center.x="parent.center.x"
        outlet="loadingLabel"
        text="{strings.indicator.loading}"
        top="previous.bottom + 5"
    />
</UIView>
