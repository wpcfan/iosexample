<UICollectionViewCell
    clipsToBounds="true"
    reuseIdentifier="sceneCollectionCell">
    
    <UITableView
        backgroundColor="white"
        contentInset.bottom="parent.bottom"
        contentInset.top="parent.top"
        contentInsetAdjustmentBehavior="never"
        estimatedSectionHeaderHeight="20"
        scrollIndicatorInsets.bottom="parent.bottom"
        scrollIndicatorInsets.top="parent.top"
        style="plain">
        <UITableViewCell
            detailTextLabel.highlightedTextColor="white"
            detailTextLabel.text="This cell is defined in TableCell.xml"
            detailTextLabel.textColor="#aaa"
            height="auto + 20"
            reuseIdentifier="sceneTableCell"
            selectedBackgroundView.backgroundColor="colors.red"
            style="subtitle"
            textLabel.highlightedTextColor="white"
            textLabel.text="Title #{row}">
            
            
        </UITableViewCell>
    </UITableView>
</UICollectionViewCell>
