<UITableView
    backgroundColor="white"
    contentInset.bottom="safeAreaInsets.bottom"
    contentInset.top="parent.top"
    contentInsetAdjustmentBehavior="never"
    contentOffset.y="0"
    estimatedSectionHeaderHeight="0"
    scrollIndicatorInsets.bottom="safeAreaInsets.bottom"
    scrollIndicatorInsets.top="parent.top"
    separatorStyle="none"
    style="plain">

    <!-- Section header template -->
    <UIView
        backgroundColor="white"
        height="15%">

        <UIImageView
            id="avatarView"
            bottom="parent.bottom - 5"
            clipsToBounds="true"
            contentMode="scaleAspectFill"
            height="64"
            imgUrl="{avatar}"
            layer.cornerRadius="32"
            left="parent.left + 16"
            width="height"
        />
        <UILabel
            height="26"
            left="previous.right + 10"
            text="{name}"
            top="previous.top + 5"
        />
        <UILabel
            height="26"
            left="previous.left"
            text="{mobile}"
            font="14"
            top="previous.bottom + 5"
        />
        <UIImageView
            image="{rightArrow}"
            right="parent.right - 10"
            center.y="#avatarView.center.y"
            width="30"
            height="30"
            />
    </UIView>

    <!-- Table cell template -->
    <UITableViewCell
        height="auto + 20"
        reuseIdentifier="sidebarCell"
        style="subtitle"
        selectedBackgroundView.backgroundColor="clear"
    >
        <UIImageView
            contentMode="scaleAspectFit"
            width="30"
            height="width"
            left="parent.left"
            center.y="parent.center.y"
            image="{icon}" />
        <UILabel
            text="{title}"
            left="previous.right + 10"
            center.y="previous.center.y"
            width="auto + 10"
            height="30"
            />
        <UILabel
            isHidden="count == -1"
            text="{count}"
            right="parent.right - 10"
            center.y="previous.center.y"
            width="20"
            height="30"
            textAlignment="right"
            />
        <UIImageView
            isHidden="count > -1"
            image="{rightArrow}"
            right="parent.right - 10"
            center.y="previous.center.y"
            width="30"
            height="30"
            />
    </UITableViewCell>
</UITableView>
