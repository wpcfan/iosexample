<UITableView
    backgroundColor="white"
    contentInset.bottom="safeAreaInsets.bottom"
    contentInset.top="safeAreaInsets.top"
    contentInsetAdjustmentBehavior="never"
    contentOffset.y="-safeAreaInsets.top"
    outlet="tableView"
    scrollIndicatorInsets.bottom="safeAreaInsets.bottom"
    scrollIndicatorInsets.top="safeAreaInsets.top"
    style="plain">

    <!-- Table header -->
    <UIView height="auto + 10" backgroundColor="primary">
        <UITextField
            placeholder="选择下方设备的属性，或在此输入进行筛选"
            autocapitalizationType="none"
            autocorrectionType="no"
            borderStyle="none"
            clearButtonMode="whileEditing"
            top="10"
            width="100%"
            textColor="white"
        />
    </UIView>
    

    <!-- Section header template -->
    <UITableViewHeaderFooterView
        reuseIdentifier="header"
    >
        <UIImageView
            imgUrl="{imageUrl}"
            left="20"
            width="height"
            height="parent.height"
            contentMode="scaleAspectFill"
            />
        <UILabel
            text="{deviceName}"
            left="previous.right + 10"
            textAlignment="center"
            center.y="parent.center.y"
            />
    </UITableViewHeaderFooterView>
    

    <!-- Table cell template -->
    <UITableViewCell
        reuseIdentifier="cell"
        textLabel.text="{streamName}">

    </UITableViewCell>
</UITableView>
