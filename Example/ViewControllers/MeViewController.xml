<Example.MeViewController>
    <UIView
        top="parent.top "
        height="25%"
        width="100%">
        
        <UIImageView
            bottom="parent.bottom"
            contentMode="scaleAspectFill"
            left="parent.left"
            image="MeBanner"
            right="parent.right"
            top="parent.top"
            >
        </UIImageView>
    </UIView>
    <UICollectionView
        backgroundColor="clear"
        collectionViewLayout.itemSize.height="collectionViewLayout.itemSize.width"
        collectionViewLayout.itemSize.width="(100% - 6 * 10) / 7"
        collectionViewLayout.minimumInteritemSpacing="10"
        collectionViewLayout.sectionInset.right="10"
        collectionViewLayout.sectionInset.left="10"
        collectionViewLayout.sectionInset.top="10"
        collectionViewLayout.sectionInset.bottom="10"
        collectionViewLayout.scrollDirection="vertical"
        contentInset.bottom="safeAreaInsets.bottom"
        contentInset.top="safeAreaInsets.top"
        contentInsetAdjustmentBehavior="never"
        contentOffset.y="-safeAreaInsets.top"
        outlet="collectionView"
        scrollIndicatorInsets.bottom="safeAreaInsets.bottom"
        scrollIndicatorInsets.top="safeAreaInsets.top">
        
        <UICollectionViewCell
            clipsToBounds="true"
            reuseIdentifier="templateCell">
            
            <UIImageView
                contentMode="scaleAspectFit"
                height="100%"
                image="{image}"
                width="100%"
                />
        </UICollectionViewCell>
    </UICollectionView>
</Example.MeViewController>
