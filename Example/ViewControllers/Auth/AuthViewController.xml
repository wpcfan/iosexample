<UIScrollView
    backgroundColor="white"
    contentInset.bottom="safeAreaInsets.bottom + 50"
    contentInset.left="safeAreaInsets.left + 15"
    contentInset.right="safeAreaInsets.right + 15"
    contentInset.top="max(safeAreaInsets.top + 5, 15)"
    contentInsetAdjustmentBehavior="never"
    outlet="scrollView"
    scrollIndicatorInsets.bottom="safeAreaInsets.bottom + 50"
    scrollIndicatorInsets.top="safeAreaInsets.top">

    <UIImageView
        contentMode="scaleAspectFill"
        height="100%"
        image="Login"
        left="parent.left"
        top="parent.top"
        width="100%"
    />
    <UIImageView
        center.x="previous.center.x"
        contentMode="scaleAspectFit"
        height="80"
        image="app"
        top="0.25 * previous.height"
        width="80"
    />
    <UITextField
        autocapitalizationType="none"
        autocorrectionType="no"
        borderStyle="none"
        clearButtonMode="whileEditing"
        height="30"
        isEnabled="!loading"
        left="safeAreaInsets.left"
        outlet="usernameField"
        placeholder="{strings.login.username}"
        right="parent.right - safeAreaInsets.right"
        top="0.7 * parent.height"
    />
    <PasswordField
        enableIcon="false"
        height="previous.height"
        isEnabled="!loading"
        left="previous.left"
        outlet="passwordField"
        placeholder="{strings.login.password}"
        right="previous.right"
        top="previous.bottom + 10"
    />
    <UIButton
        backgroundColor="loginFormValid(loading, validation) ? primary : lightGray"
        isEnabled="loginFormValid(loading, validation)"
        layer.cornerRadius="0.5 * height"
        left="safeAreaInsets.left"
        outlet="loginButton"
        right="parent.right - safeAreaInsets.right"
        title="{strings.login.loginbtn.title}"
        top="previous.bottom + 15"
    />
    <UIButton
        contentHorizontalAlignment="left"
        isEnabled="!loading"
        left="safeAreaInsets.left + 15"
        title="{strings.login.forgotpwdbtn.title}"
        titleColor="black"
        titleLabel.font="helvetica neue light"
        top="previous.bottom + 15"
        touchUpInside="forgot"
        width="150"
    />
    <UIButton
        contentHorizontalAlignment="right"
        isEnabled="!loading"
        outlet="registerButton"
        right="parent.right - safeAreaInsets.right - 15"
        title="{strings.login.signupbtn.title}"
        titleColor="black"
        titleLabel.font="helvetica neue light"
        top="previous.top"
        touchUpInside="register"
        width="100"
    />
</UIScrollView>
