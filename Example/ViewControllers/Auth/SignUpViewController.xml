<UIScrollView
    backgroundColor="white"
    contentInset.bottom="safeAreaInsets.bottom"
    contentInset.left="safeAreaInsets.left"
    contentInset.right="safeAreaInsets.right"
    contentInset.top="safeAreaInsets.top"
    contentInsetAdjustmentBehavior="never"
    outlet="scrollView"
    scrollIndicatorInsets.bottom="safeAreaInsets.bottom"
    scrollIndicatorInsets.top="safeAreaInsets.top">

    <UITextField
        autocapitalizationType="none"
        autocorrectionType="no"
        borderStyle="none"
        clearButtonMode="whileEditing"
        height="30"
        id="mobile"
        left="safeAreaInsets.left + 10"
        leftView="mobileIcon"
        leftViewMode="always"
        outlet="mobileField"
        placeholder="{strings.signup.mobile}"
        right="parent.right - safeAreaInsets.right - 10"
        top="parent.top + 10"
    />
    <UITextField
        autocapitalizationType="none"
        autocorrectionType="no"
        borderStyle="none"
        clearButtonMode="whileEditing"
        height="previous.height"
        left="previous.left"
        leftView="captchaIcon"
        leftViewMode="always"
        outlet="capchaField"
        placeholder="{strings.signup.capcha}"
        right="previous.right - 80"
        top="previous.bottom + 10"
    />
    <UIImageView
        contentMode="scaleAspectFit"
        height="previous.height"
        image="{captcha}"
        left="previous.right"
        outlet="capchaImage"
        right="#mobile.right"
        top="previous.top"
    />
    <UIButton
        height="30"
        isSelected="true"
        left="parent.left + 10"
        normalImage="uncheckCircle"
        outlet="termsButton"
        selectedImage="checkCircle"
        top="previous.bottom + 10"
        touchUpInside="toggle:"
        width="30"
    />
    <UILabel
        font="16"
        height="previous.height"
        left="previous.right + 5"
        text="{strings.signup.agree}"
        top="previous.top"
        width="auto"
    />
    <UIButton
        height="previous.height"
        left="previous.right"
        title="{strings.signup.terms}"
        titleColor="primary"
        titleLabel.font="14"
        titleLabel.textAlignment="left"
        top="previous.top"
        touchUpInside="showTerms"
        width="auto"
    />
    <UIButton
        backgroundColor="formValid ? primary : lightGray"
        height="40"
        isEnabled="formValid"
        layer.cornerRadius="0.5 * height"
        left="parent.left + safeAreaInsets.left + 10"
        right="parent.right - safeAreaInsets.right - 10"
        title="{strings.signup.next}"
        titleColor="white"
        outlet="nextButton"
        top="previous.bottom + 40"
    />
</UIScrollView>
