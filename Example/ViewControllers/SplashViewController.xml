<UIViewController view.backgroundColor="#4FB2CB">
    <UIButton
        backgroundColor="#4FB2CB "
        height="64"
        layer.borderColor="#fff"
        layer.borderWidth="8"
        layer.cornerRadius="0.5 * width"
        left="parent.right - 100"
        outlet="countDown"
        title="{countDownTitle}"
        titleColor="#fff"
        top="safeAreaInsets.top + 15"
        width="64"
    />
    <UIImageView
        center.x="parent.center.x"
        center.y="parent.center.y"
        contentMode="scaleAspectFit"
        image="SplashIcon"
        outlet="imageView"
    />
</UIViewController>
