<UIViewController view.backgroundColor="primary">
    <UIButton
        touchUpInside="navigateToAd"
        isHidden="!hasSplashAd">
        <UIImageView
            width="100%"
            height="100%"
            contentMode="scaleAspectFit"
            imgUrl="splashAdImageUrl"
            clipsToBounds="true"
            />
    </UIButton>
    <UIButton
        height="64"
        layer.borderColor="textIcon"
        layer.borderWidth="8"
        layer.cornerRadius="0.5 * width"
        left="parent.right - 100"
        outlet="countDown"
        title="{countDownTitle}"
        titleColor="textIcon"
        top="safeAreaInsets.top + 15"
        width="64"
    />
    <UIImageView
        center.x="parent.center.x"
        center.y="parent.center.y"
        contentMode="scaleAspectFit"
        width="150"
        height="150"
        image="app"
        outlet="imageView"
        clipsToBounds="true"
        layer.borderColor="primary"
        layer.borderWidth="8"
        layer.cornerRadius="0.5 * width"
        isHidden="hasSplashAd"
    />
    <UILabel
        width="100%"
        top="previous.bottom + 50"
        textAlignment="center"
        textColor="white"
        font="Courier bold 30"
        text="{AppName}"
    />
</UIViewController>
