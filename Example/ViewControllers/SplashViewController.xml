<UIViewController view.backgroundColor="primary">
    <UIButton
        height="64"
        layer.borderColor="textIcon"
        layer.borderWidth="8"
        layer.cornerRadius="0.5 * width"
        left="parent.right - 100"
        outlet="countDown"
        title="{countDownTitle}"
        titleColor="textIcon"
        top="safeAreaInsets.top + 15"
        width="64"
    />
    <UIImageView
        center.x="parent.center.x"
        center.y="parent.center.y"
        contentMode="scaleAspectFit"
        width="64"
        height="64"
        image="SplashIcon"
        outlet="imageView"
    />
</UIViewController>
