<UIView>
    <UIImageView
        clipsToBounds="true"
        contentMode="scaleAspectFill"
        height="100%"
        imgUrl="{splashAdImageUrl}"
        isHidden="!hasSplashAd"
        outlet="splashAdImageView"
        width="100%"
    />
    <UIButton
        height="64"
        layer.borderColor="textIcon"
        layer.borderWidth="8"
        layer.cornerRadius="0.5 * width"
        left="parent.right - 100"
        outlet="countDown"
        title="{countDownTitle}"
        titleColor="textIcon"
        top="safeAreaInsets.top + 15"
        width="64"
    />
    <UIImageView
        center.x="parent.center.x"
        center.y="parent.center.y"
        clipsToBounds="true"
        contentMode="scaleAspectFit"
        height="150"
        image="app"
        isHidden="hasSplashAd"
        layer.borderColor="primary"
        layer.borderWidth="8"
        layer.cornerRadius="0.5 * width"
        outlet="imageView"
        width="150"
    />
    <UILabel
        font="Courier bold 30"
        text="{AppName}"
        textAlignment="center"
        textColor="white"
        top="previous.bottom + 50"
        width="100%"
    />
</UIView>
