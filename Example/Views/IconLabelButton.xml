<UIView>
    <param name="imgUrl" type="String"/>
    <param name="title" type="String"/>

    <UIButton
        height="48"
        left="parent.left + 5"
        top="parent.top + 5"
        width="48">

        <UIImageView
            height="100%"
            id="icon"
            imgUrl="{imgUrl}"
            width="100%"
        />
    </UIButton>
    <UILabel
        center.x="previous.center.x"
        height="12"
        text="{title}"
        top="previous.bottom + 5"
    />
</UIView>
