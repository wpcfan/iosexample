<UIView backgroundColor="clear">
    <UITextField
        center.x="parent.center.x"
        center.y="parent.center.y"
        height="auto + 20"
        outlet="sceneNameField"
        text="{sceneName}"
        textAlignment="center"
        textColor="white"
        width="parent.width"
    />
    <UISwitch
        isOn="sceneActive"
        outlet="sceneActiveSwitch"
        right="parent.right - 10"
        top="parent.top + 10"
    />
</UIView>
