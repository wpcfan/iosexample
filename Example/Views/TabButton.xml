<UIView clipsToBounds="true">
    <UIButton
        center.x="parent.center.x"
        height="16"
        title="{title}"
        titleColor="#000"
        top="parent.top + 10"
        width="64"
    />
    <UIView
        backgroundColor="{color}"
        center.x="previous.center.x"
        height="2"
        top="previous.bottom + 10"
        width="previous.width + 10"
    />
</UIView>
