<UIView clipsToBounds="true">
    <UIButton
        center.x="parent.center.x"
        height="32"
        title="{title}"
        titleColor="#000"
        top="parent.top + 5"
        width="48"
    />
    <UIView
        backgroundColor="{color}"
        center.x="previous.center.x"
        height="2"
        top="previous.bottom + 5"
        width="32"
    />
</UIView>
