<UIView>
    <UILabel
        font="14"
        height="100%"
        left="parent.left"
        text="{location}"
        textAlignment="center"
        top="parent.top"
        width="20%"
    />
    <UILabel
        font="12"
        height="50%"
        left="previous.right"
        text="{strings.weather.temperature(temperature)}"
        textAlignment="center"
        textColor="primary"
        top="previous.top"
        width="15%"
    />
    <UILabel
        font="12"
        height="50%"
        left="previous.left"
        text="{strings.weather.temperature.name}"
        textAlignment="center"
        top="previous.bottom"
        width="15%"
    />
    <UILabel
        font="12"
        height="50%"
        left="previous.right"
        text="{humidity}"
        textAlignment="center"
        textColor="primary"
        top="parent.top"
        width="15%"
    />
    <UILabel
        font="12"
        height="50%"
        left="previous.left"
        text="{strings.weather.humidity.name}"
        textAlignment="center"
        top="previous.bottom"
        width="15%"
    />
    <UILabel
        font="12"
        height="50%"
        left="previous.right"
        text="{airQualityIndicator}"
        textAlignment="center"
        textColor="primary"
        top="parent.top"
        width="15%"
    />
    <UILabel
        font="12"
        height="50%"
        left="previous.left"
        text="{strings.weather.aqi.name}"
        textAlignment="center"
        top="previous.bottom"
        width="15%"
    />
    <UILabel
        font="12"
        height="50%"
        left="previous.right"
        text="{windForce}"
        textAlignment="center"
        textColor="primary"
        top="parent.top"
        width="15%"
    />
    <UILabel
        font="12"
        height="50%"
        left="previous.left"
        text="{windDirection}"
        textAlignment="center"
        top="previous.bottom"
        width="15%"
    />
    <UILabel
        font="14"
        height="100%"
        left="previous.right"
        text="{phenomena}"
        textAlignment="center"
        top="parent.top"
        width="20%"
    />
</UIView>
